@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="login_page">
    <div class="row">
        <div class="col-md-12">
            <form method="post" action="~/Auth/Register" id="f1">

                <center>
                    @*<h2 class="black">Speedlink</h2>*@
                    <img class="login_hcity_icon" src="~/assets/img/logo.jpeg" />
                    <br />
                    <br />
                    <h3 class="black">Tutor Registration</h3>
                    <br />
                    <br />
                </center>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="black"><span style="color:red">*</span> Firstname</label>
                            <input name="Firstname" type="text" class="form-control" required>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="black"><span style="color:red">*</span> Surname</label>
                            <input name="Surname" type="text" class="form-control" required>
                        </div>
                    </div>
                </div>




                <div class="form-group">
                    <label class="black"><span style="color:red">*</span> Email</label>
                    <input name="Email" type="text" class="form-control" required>
                </div>

                <div class="form-group">
                    <label class="black"><span style="color:red">*</span> Password</label>
                    <input name="PasswordHash" type="text" class="form-control" value="" required>
                </div>
               

                <div class="form-group">
                    <button type="submit" class="btn btn-danger btn-block">Register</button>
                </div>

                <div class="form-group">
                    <a href="~/Auth/Login" type="submit" class="btn btn-primary btn-block">Login</a>
                </div>

                <center>
                    <span>@TempData["msg"]</span>
                </center>


            </form>
        </div>
    </div>
</div>

    <script>
        $(document).ready(function () {
            $("#f1").validate();
        });
    </script>
